{
  "Commands": [
    {
      "Name": "Import-Module",
      "Arguments": {
        "Name": "CoreFunctions"
      }
    },
    {
      "Name": "Set-NetworkAdapterConfiguration",
      "Arguments": {
        "FirstAvailable": true,
        "DNSServer": "$dnsIp"
      }
    },
    {
      "Name": "Join-Domain",
      "Arguments": {
        "Username": "$domainUser",
        "Password": "$domainPassword",
        "DomainName": "$domain",
        "OUPath": "$ouPath"
      }
    }
  ],
  "RebootOnCompletion": 1,
  "Scripts": [
    "joinDomain.ps1"
  ]
}